# Server
PORT=5000
NODE_ENV=production

# Database - Will be set by Railway/Supabase
DATABASE_URL=${{DATABASE_URL}}

# JWT - Generate a strong secret
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=7d

# Google Cloud Vision AI (Optional for now)
# GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json
# GOOGLE_CLOUD_PROJECT_ID=your-project-id

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS - Will update with your Railway URL
ALLOWED_ORIGINS=*

# Interswitch Payment Gateway (IPG)
INTERSWITCH_MERCHANT_CODE=MX51309
INTERSWITCH_PAY_ITEM_ID=Default_Payable_MX51309
INTERSWITCH_MODE=TEST
INTERSWITCH_API_BASE_URL=https://qa.interswitchng.com
INTERSWITCH_INLINE_SCRIPT_URL=https://newwebpay.qa.interswitchng.com/inline-checkout.js
# For LIVE mode, change to:
# INTERSWITCH_MODE=LIVE
# INTERSWITCH_API_BASE_URL=https://webpay.interswitchng.com
# INTERSWITCH_INLINE_SCRIPT_URL=https://newwebpay.interswitchng.com/inline-checkout.js
